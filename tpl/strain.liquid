<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Ucpc</th>
            <th>Image</th>
        </tr>
    </thead>

    <tbody>
        {% for row in data %}
        <tr>
            <td></td>
            <td><a data-toggle="modal" data-target="#row_{{ row.ucpc }}">{{ row.name }}</a></td>
            <td>{{ row.ucpc }}</td>
            <td><img src="{{ row.image }}" height="48" width="48" /></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
